extends layout

block content
    nav.navbar.navbar-light.bg-light
        .container
           button#cart.btn.btn-primary Cart
              span#badge.badge.bg-danger 0
              
    
    .container.products
       .row
           each item in items
                 .col
                     .card.product-item 
                        img.card-img-top(src=`${item.image}` alt='')
                        .card-body
                            h5.card-title= item.name
                            p.card-text
                            | Price: #{item.price}
                            div
                                button(data-id=`${item.id}`).btn.btn-primary Add to cart